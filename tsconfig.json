{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"]
}
